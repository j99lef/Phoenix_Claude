# AWS Deployment Environment Variables
# Copy this to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=generate-a-secure-secret-key-here

# Database (for RDS PostgreSQL)
# DATABASE_URL=postgresql://username:password@rds-endpoint.amazonaws.com:5432/travelaigent

# For local SQLite (development only)
DATABASE_URL=sqlite:///instance/travel_aigent.db

# Amadeus API (Required)
AMADEUS_CLIENT_ID=your-amadeus-client-id
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret

# OpenAI API (Required for AI features)
OPENAI_API_KEY=your-openai-api-key

# Google Sheets (Optional - for legacy features)
GOOGLE_SHEETS_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SHEETS_CREDENTIALS_JSON=path-to-credentials.json

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-to-secure-password

# AWS Specific Settings
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Application Settings
MAX_DEALS_PER_SEARCH=20
AMADEUS_REQUESTS_PER_MINUTE=10
SEARCH_INTERVAL_HOURS=4

# Email Settings (for notifications)
SMTP_SERVER=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your-ses-username
SMTP_PASSWORD=your-ses-password
SENDER_EMAIL=noreply@yourdomain.com